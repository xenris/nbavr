# Tuprules

LIB_CFLAGS = -I$(TUP_CWD)/src
LIB_CFLAGS += -Wall
LIB_CFLAGS += -Wextra
LIB_CFLAGS += -Werror
LIB_CFLAGS += -ffunction-sections
LIB_CFLAGS += -g
LIB_CFLAGS += -std=c99
LIB_CFLAGS += -Os
LIB_CFLAGS += -mmcu=@(MMCU)
LIB_CFLAGS += -DF_CPU=@(FREQ)
LIB_CFLAGS += -Wl,-gc-sections
LIB_CFLAGS += -fdiagnostics-color=always
LIB_CFLAGS += -Wno-unused-parameter
LIB_CFLAGS += -Wno-unused-function

LIB_LDFLAGS = -L$(TUP_CWD)
LIB_LDFLAGS += -lnbavr

LIB_LIBFILE = $(TUP_CWD)/libnbavr.a
